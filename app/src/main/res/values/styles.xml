<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonStyle">@style/searchResults</item>
        <item name="buttonStyle">@style/button</item>
    </style>

    <style name="box">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textViewStyle">@style/textView</item>
    </style>

    <style name="textView">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textViewProfileHeader">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="searchResults" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>